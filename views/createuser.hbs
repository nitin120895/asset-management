
<script>

function openmanid() {
  var x = document.getElementById("des").value;
  var y = document.getElementById("managerid");
  var z = document.getElementById("empid");
  var a = document.getElementById("supportid");

  if (x==="manager") {
    a.style.display = "block";

    y.style.display = "block";
    z.style.display = "none";

  }
   else if(x==="employee") {
    y.style.display = "block";
    z.style.display = "block";
    a.style.display = "none";

  }
  else if(x==="support") {
   y.style.display = "none";
   z.style.display = "none";
   a.style.display = "block";
}
  else {
    y.style.display = "none";
    a.style.display = "none";

    z.style.display = "none";

  }
  }

</script>

