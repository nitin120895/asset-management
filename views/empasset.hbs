<div class="container" style="width:900px;">

<div class="jumbotron">


      {{#if msg}}
          <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong>{{msg}}</strong>
          </div>
        {{/if}}

<h3 style="color:coral">welcome user :{{employee}}{{manager}}</h3>

<h1 style="">my assets</h1>


<table class="table table-hover">
<tr><th>asset name</th><th>assetid</th><th>empid</th><th>managerid</th><th>status</th><th>user</th></tr>
{{#each data}}
<tr>
<td>{{this.assetname}}</td>
<td>{{this.assetid}}</td>
<td>{{this.empid}}</td>
<td>{{this.managerid}}</td>

<td>{{this.status}}</td>
<td>{{this.user}}</td>
<td>aproved  by support</td>
<td><a href="/transfer?sid={{this._id}}" onclick="return confirm('do u want to transfer this..')" class="btn btn-info btn-lg">
         <span class="glyphicon glyphicon-send"></span> Send
       </a></td>

</tr>


{{/each }}
</table>
</div>
</div>
