<div class="container" style="width:700px;">

<div class="jumbotron">


        {{#if msg}}
            <div class="alert alert-success alert-dismissible">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>{{msg}}</strong>
            </div>
          {{/if}}

<h3 style="color:coral">welcome admin :{{admin}}</h3>

<h1 style="">assets</h1>


<table class="table table-hover">
<tr><th>asset name</th><th>assetid</th><th>status</th><th>issuedto</th></tr>
{{#each data}}
<tr>
<td>{{this.assetname}}</td>
<td>{{this.assetid}}</td>
<td>{{this.assetstatus}}</td>
<td>{{this.issuedto}}</td>
<td><a  class="glyphicon glyphicon-trash" href="/deleteasset?_id={{this._id}}" onclick="return confirm('do u want to delete this..')"></a></td>
<td><a href="/upuser?sid={{this._id}}" class="glyphicon glyphicon-edit"></a></td>

</tr>


{{/each }}
</table>
</div>
</div>
